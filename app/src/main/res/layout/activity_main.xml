<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDark"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="78dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_border"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/date"
                        android:layout_marginStart="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="72dp"
                        android:text=" Дата:"
                        android:textColor="@color/fontcolor"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/editTextData"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="72dp"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/fontcolor" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_border"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/name"
                        android:layout_marginStart="15dp"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:text=" Имя:"
                        android:layout_weight="1"
                        android:textColor="@color/fontcolor"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/editTextName"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/fontcolor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_border"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="0dp"
                        android:layout_marginStart="15dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:text="Номер телефона:"
                        android:textColor="@color/fontcolor"
                        android:textSize="17sp" />


                    <EditText
                        android:id="@+id/editTextPhone"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:ems="10"
                        android:inputType="phone"
                        android:digits="9876543210"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/fontcolor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_border"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/drugiemagazini"
                        android:layout_width="0dp"
                        android:layout_marginStart="15dp"
                        android:layout_height="72dp"
                        android:text="Другие Магазины"
                        android:textColor="@color/fontcolor"
                        android:layout_weight="1"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/editTextDrugiemagazini"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="62dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textColorHint="@color/fontcolor"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:background="@drawable/custom_border">

                    <TextView
                        android:id="@+id/svetqwerty"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_height="72dp"
                        android:text=" Цвет:"
                        android:textColor="@color/fontcolor"
                        android:textSize="17sp" />


                    <EditText
                        android:id="@+id/editTextSvet"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="74dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textColorHint="@color/fontcolor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:background="@drawable/custom_border">

                    <TextView
                        android:id="@+id/nuansi"
                        android:layout_marginStart="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="72dp"
                        android:text=" Нюансы:"
                        android:textColor="@color/fontcolor"
                        android:textSize="17sp" />


                    <EditText
                        android:id="@+id/editTextNyuansi"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="74dp"
                        android:ems="10"
                        android:textAlignment="center"
                        android:inputType="textPersonName"
                        android:textColor="@color/white"
                        android:textColorHint="@color/fontcolor" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/categorygroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/custom_border">

                    <LinearLayout
                        android:id="@+id/categorygrouphorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <Spinner
                            android:id="@+id/spinnerKategoriya"
                            android:layout_width="0dp"
                            android:layout_height="72dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:popupBackground="@color/swhite"
                            android:spinnerMode="dropdown" />

                        <EditText
                            android:id="@+id/editTextNaimenovaniye"
                            android:layout_width="0dp"
                            android:layout_height="72dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:hint="Наименование"
                            android:inputType="textPersonName"
                            android:textColor="@color/white"
                            android:textColorHint="@color/fontcolor" />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switch_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                            android:checked="false"
                            android:theme="@style/SCBSwitch" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/categorygrouphorizontal2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgrey"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <Spinner
                            android:id="@+id/spinnerKategoriya2"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="225dp"
                            android:layout_height="72dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:popupBackground="@color/swhite"
                            android:spinnerMode="dropdown"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/editTextNaimenovaniye2"
                            android:layout_width="225dp"
                            android:layout_height="72dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:hint="Наименование"
                            android:inputType="textPersonName"
                            android:textColor="@color/white"
                            android:textColorHint="@color/fontcolor"
                            android:visibility="gone" />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switch_2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                            android:checked="false"
                            android:visibility="gone"
                            android:theme="@style/SCBSwitch" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/categorygrouphorizontal3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:background="@color/lightgrey"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnerKategoriya3"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="225dp"
                            android:layout_height="72dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:popupBackground="@color/swhite"
                            android:spinnerMode="dropdown"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/editTextNaimenovaniye3"
                            android:layout_width="225dp"
                            android:layout_height="72dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:hint="Наименование"
                            android:inputType="textPersonName"
                            android:textColor="@color/white"
                            android:textColorHint="@color/fontcolor"
                            android:visibility="gone" />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switch_3"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:checked="false"
                            android:visibility="gone"
                            android:theme="@style/SCBSwitch"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/categorygrouphorizontal4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:background="@color/swhite"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnerKategoriya4"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="225dp"
                            android:layout_height="72dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:popupBackground="@color/swhite"
                            android:spinnerMode="dropdown"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/editTextNaimenovaniye4"
                            android:layout_width="225dp"
                            android:layout_height="72dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:hint="Наименование"
                            android:inputType="textPersonName"
                            android:textColor="@color/white"
                            android:textColorHint="@color/fontcolor"
                            android:visibility="gone" />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switch_4"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:checked="false"
                            android:visibility="gone"
                            android:theme="@style/SCBSwitch"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/categorygrouphorizontal5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:background="@color/swhite"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnerKategoriya5"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="225dp"
                            android:layout_height="72dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:popupBackground="@color/colorPrimary"
                            android:spinnerMode="dropdown"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/editTextNaimenovaniye5"
                            android:layout_width="225dp"
                            android:layout_height="72dp"
                            android:layout_weight="2"
                            android:ems="10"
                            android:hint="Наименование"
                            android:inputType="textPersonName"
                            android:textColor="@color/white"
                            android:textColorHint="@color/fontcolor"
                            android:visibility="gone" />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switch_5"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:checked="false"
                            android:visibility="gone"
                            android:theme="@style/SCBSwitch"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:background="@drawable/custom_border">

                    <Button
                        android:id="@+id/addcategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/green"
                        android:text="Добавить"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/deletecategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/red"
                        android:text="Удалить"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:visibility="gone" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/custom_border">

                    <TextView
                        android:id="@+id/filial"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:text=" Филиал:"
                        android:textColor="@color/fontcolor"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/spinnerFilial"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:popupBackground="@color/swhite"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:background="@drawable/custom_border">

                    <TextView
                        android:id="@+id/otkudauznal"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:text=" Откуда Узнал :"
                        android:textAlignment="viewStart"
                        android:textColor="@color/fontcolor"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/spinnerOtkudaUznal"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:popupBackground="@color/swhite"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/white"
                        android:textColorHint="@color/fontcolor" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/custom_border">

                    <TextView
                        android:id="@+id/xarakter"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:text=" Характер :"
                        android:textAlignment="viewStart"
                        android:textColor="@color/fontcolor"
                        android:textColorHint="@color/fontcolor"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/spinnerXarakter"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:ems="10"
                        android:layout_weight="1"
                        android:hint="Характер :"
                        android:inputType="textPersonName"
                        android:popupBackground="@color/swhite"
                        android:spinnerMode="dropdown"
                        android:textColorHint="@color/fontcolor" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:background="@drawable/custom_border">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:text="Статус :"
                        android:textAlignment="viewStart"
                        android:textColor="@color/fontcolor"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/spinnerStatus"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="62dp"
                        android:ems="10"
                        android:popupBackground="@color/swhite"
                        android:spinnerMode="dropdown" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/custom_border">

                    <TextView
                        android:id="@+id/tipmebeli"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:text="Тип мебели"
                        android:textColor="@color/fontcolor"
                        android:textColorHint="@color/fontcolor"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/spinnerTipModeli"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="62dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:popupBackground="@color/swhite"
                        android:spinnerMode="dropdown" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/custom_border">

                    <TextView
                        android:id="@+id/konsultant"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:text="Консультант :"
                        android:textColor="@color/fontcolor"
                        android:textColorHint="@color/fontcolor"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/spinnerKonsultant"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="72dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:popupBackground="@color/swhite"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/simpleProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:indeterminate="true"
                    android:max="100"
                    android:padding="20dp"
                    android:progress="50"
                    android:visibility="gone" /><!--true value for indeterminate-->
                <Button
                    android:id="@+id/sendBtn"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/swhite"
                    android:text="Отправить"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</android.support.v4.widget.DrawerLayout>